<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MenuActivity"
    android:background="#E0F2F1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/titleView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:layout_margin="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/spotifyAppButton"
        android:layout_below="@+id/titleView"
        android:onClick="startSpotifyApp"
        style="@style/buttonStyle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/scoresAppButton"
        android:layout_below="@+id/spotifyAppButton"
        android:onClick="startScoresApp"
        style="@style/buttonStyle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/libraryAppButton"
        android:layout_below="@+id/scoresAppButton"
        android:onClick="startLibraryApp"
        style="@style/buttonStyle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/buildItAppButton"
        android:layout_below="@+id/libraryAppButton"
        android:onClick="startBuildItApp"
        style="@style/buttonStyle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/xyzApp"
        android:layout_below="@+id/buildItAppButton"
        android:onClick="startXYZApp"
        style="@style/buttonStyle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/myAppButton"
        android:layout_below="@+id/xyzApp"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:textSize="16dp"
        android:textColor="#000000"
        android:padding="10dp"
        android:onClick="startMyApp"
        android:minWidth="200dp"
        android:background="#F08C35"/>

</RelativeLayout>
